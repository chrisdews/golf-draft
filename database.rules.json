{
  "rules": {
    "users": {
      "$userId": {
        // Users can only read and write their own record
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "drafts": {
      "$draftId": {
        // Any authenticated user can read a draft (access is controlled by sharing the draft ID)
        ".read": "auth != null",
        // Write allowed when: creating a new draft (data doesn't exist yet) OR already a member
        ".write": "auth != null && (!data.exists() || data.child('users').child(auth.uid).exists())",
        "users": {
          "$userId": {
            // Authenticated users can add themselves to a draft's user list (join)
            // This grants access even when the parent rule above denies (not yet a member)
            ".write": "auth != null && auth.uid == $userId"
          }
        }
      }
    }
  }
}
